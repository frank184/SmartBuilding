<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="error">
  <%= devise_error_messages! %>
</div>
<form class="form-horizontal" role="form">
  <div class="form-group">
    <%= f.label :email, :class=> "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.email_field :email, :class=> "form-control", autofocus: true %><br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class=> "control-label col-sm-2" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <div class="col-sm-10">
      <%= f.password_field :password, :class=> "form-control", autocomplete: "off" %><br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class=> "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, :class=> "form-control", autocomplete: "off" %><br>
    </div>
  </div>

  <div class="form-group"> 
      <%= f.label :First_Name, :class=> "control-label col-sm-2" %>
      <div class="col-sm-10"> 
      <%= f.text_field :fname, :class=> "form-control" %><br>
      </div>
  </div>
  <div class="form-group"> 
      <%= f.label :Last_Name, :class=> "control-label col-sm-2" %>
      <div class="col-sm-10">
          <%= f.text_field :lname, :class=> "form-control" %><br>
      </div>
  </div>
  <div class="form-group"> 
      <%= f.label :Street_Address, :class=> "control-label col-sm-2" %>
      <div class="col-sm-10">
          <%= f.text_field :street, :class=> "form-control" %><br>
      </div>
  </div>
  <div class="form-group"> 
      <%= f.label :City, :class=> "control-label col-sm-2" %>
      <div class="col-sm-10">
          <%= f.text_field :city, :class=> "form-control" %><br>
      </div>
  </div>
  <div class="form-group"> 
      <%= f.label :Province, :class=> "control-label col-sm-2" %>
      <div class="col-sm-10"> 
          <%= f.select :province, ['Alberta', 'British Columbia', 'Manitoba',
                           'Newfoundland and Labrador', 'New Brunswick', 'Northwest
                                    Territories', 'Nova Scotia', 'Nunavut', 'Ontario',
                           'Prince Edward Island', 'Quebec', 'Saskatchewan', 'Yukon'], {}, class: "form-control" %><br>
      </div>
  </div>
  <div class="form-group"> 
      <%= f.label :Postal_Code, :class=> "control-label col-sm-2" %>
      <div class="col-sm-10">
          <%= f.text_field :postal, :class=> "form-control", :placeholder=> "A0A 0A0" %><br>
      </div>
  </div>
  <div class="form-group"> 
      <%= f.label :Telephone_Number, :class=> "control-label col-sm-2" %>
      <div class="col-sm-10">
          <%= f.text_field :phone, :class=> "form-control", :placeholder=> "613123567" %><br>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :Admin %>
    <%= f.radio_button :role_id, "1" %>
    <%= f.label :User %>
    <%= f.radio_button :role_id, "2", :checked => true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "btn btn-primary" %><br>
  </div>
</form>
<% end %>

<%= render "devise/shared/links" %>

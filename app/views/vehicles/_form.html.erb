
    <%= form_for @vehicle do |f| %>
    <% if @vehicle.errors.any? %>
        <h2>Errors</h2>
        <ul>
          <% @vehicle.errors.full_messages.each do |message| %>
            <li class="error"><%= message %></li>
          <% end %>
        </ul>
    <% end %>
    <form class="form-horizontal">
    <div class="form-group">
        <%= f.label :License_Plate, :class=> "control-label col-sm-2" %>
        <div class="col-sm-10">
            <%= f.text_field :license, :class=> "form-control", :placeholder=> "License Plate" %><br>
        </div>
    </div>
    <div class="form-group"> 
        <%= f.label :Colour, :class=> "control-label col-sm-2" %>
        <div class="col-sm-10"> 
            <%= f.text_field :colour, :class=> "form-control" %><br>
        </div>
    </div>
    <div class="form-group"> 
        <%= f.label :Make, :class=> "control-label col-sm-2"  %>
        <div class="col-sm-10"> 
            <%= f.text_field :make, :class=> "form-control" %><br>
        </div>
    </div>
    <div class="form-group"> 
        <%= f.label :Model, :class=> "control-label col-sm-2"  %>
        <div class="col-sm-10"> 
            <%= f.text_field :model, :class=> "form-control" %><br>
        </div>
    </div>
    <div class="form-group"> 
        <%= f.label :Year, :class=> "control-label col-sm-2"  %>
        <div class="col-sm-10">
            <%= f.text_field :year, :class=> "form-control" %><br>
        </div>
    </div>
        <%= f.submit class: "btn btn-primary" %>
    </form>
    <% end %>
